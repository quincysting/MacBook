" Enable syntax highlight
syntax enable
" Turn syntax highlight on
syntax on

" Show line number
set number

" To always show the current position
set ruler

set nocompatible

" To highlight search result
set hlsearch

" Turn magic on to help with regular expressions
set magic

" Show matching brackets when the text indicator is over them
set showmatch

" Be smart when using tab
set smarttab
set expandtab

set bs=2
fixdel
set nowrap
set tabstop=4

" To enable autoindent
set ai
" To enable smartindent
set si

" To auto-read when a file is changed from outside
set autoread

set term=linux
set showmode showcmd
set shiftwidth=4

" Set the function of the backspace key
set backspace=indent,eol,start

" Set the color scheme
colorscheme delek

" File type plugin
filetype plugin on
filetype indent on
